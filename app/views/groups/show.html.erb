<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Group Detail</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= attachment_image_tag(@group, :image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td><%=  @group_owner.name %><br>
              <% @group.users.each do |user| %>
                  <%= user.name %>
                <% end %>
            </td>
            <td><% if @group.owner_id != current_user.id %>
              <% if @group.users.include?(current_user) %>
                <%= link_to 'leave_group', leave_group_path(@group),class: 'btn btn-danger'  %>
                <% else %>
                <%= link_to 'Join this group', join_group_path(@group), class: 'btn btn-success' %>
                <% end %>
                <% end %>
            </td>
            <td>
              <% if @group.owner_id == current_user.id %>
                <%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success" %>
              
            </td>
            <td>
              
              <%= link_to "Notice an event", group_group_new_mail_path(@group), class: "btn btn-primary" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>